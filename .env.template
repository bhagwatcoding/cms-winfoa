/**
 * Environment Configuration Template
 * Professional environment variables for multi-subdomain applications
 * 
 * @module EnvironmentConfig
 * @description Template for environment configuration
 * 
 * USAGE:
 * 1. Copy this file to .env.local for development
 * 2. Copy this file to .env.production for production
 * 3. Update the values with your actual configuration
 * 4. Never commit actual .env files to version control
 */

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Application Configuration
APP_NAME=Winfoa Multi-Subdomain Platform
APP_VERSION=3.0.0
APP_DESCRIPTION=Professional multi-subdomain enterprise application

# =============================================================================
# SUBDOMAIN CONFIGURATION
# =============================================================================

# Main Domain
MAIN_DOMAIN=localhost

# Subdomain URLs
AUTH_SUBDOMAIN=auth.localhost
DASHBOARD_SUBDOMAIN=app.localhost
GOD_SUBDOMAIN=god.localhost
MYACCOUNT_SUBDOMAIN=account.localhost
UMP_SUBDOMAIN=ump.localhost
WALLET_SUBDOMAIN=wallet.localhost

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/winfoa
MONGODB_DB_NAME=winfoa
MONGODB_USER=
MONGODB_PASSWORD=

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this-in-production

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this-in-production
SESSION_MAX_AGE=2592000 # 30 days in seconds
SESSION_COOKIE_NAME=winfoa-session

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000 # 15 minutes in milliseconds
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Configuration
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@yourdomain.com

# SMS Configuration
SMS_PROVIDER=twilio
SMS_TWILIO_ACCOUNT_SID=your-twilio-account-sid
SMS_TWILIO_AUTH_TOKEN=your-twilio-auth-token
SMS_TWILIO_PHONE_NUMBER=+1234567890

# File Storage Configuration
STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=3.0.0

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel
MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# PAYMENT & FINANCIAL
# =============================================================================

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_ENVIRONMENT=sandbox

# =============================================================================
# SOCIAL AUTHENTICATION
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Settings
DEBUG=true
LOG_LEVEL=debug
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true

# Hot Reload
FAST_REFRESH=true
TURBOPACK=true

# Source Maps
GENERATE_SOURCEMAPS=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production Settings (uncomment for production)
# DEBUG=false
# LOG_LEVEL=info
# ENABLE_SWAGGER=false
# ENABLE_GRAPHIQL=false
# GENERATE_SOURCEMAPS=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Flags
FEATURE_NEW_DASHBOARD=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true
FEATURE_PAYMENTS=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_TWO_FACTOR_AUTH=true
FEATURE_WEBHOOKS=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Cache Configuration
CACHE_TTL=3600 # 1 hour in seconds
CACHE_MAX_SIZE=1000

# CDN Configuration
CDN_ENABLED=false
CDN_URL=https://cdn.yourdomain.com
CDN_ASSETS_URL=https://assets.yourdomain.com

# Image Optimization
IMAGE_OPTIMIZATION=true
IMAGE_QUALITY=85
IMAGE_FORMATS=webp,avif

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================

# Webhook Settings
WEBHOOK_SECRET=your-webhook-secret-key-change-this-in-production
WEBHOOK_TIMEOUT=30000 # 30 seconds in milliseconds
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=5000 # 5 seconds in milliseconds

# =============================================================================
# ADMINISTRATION
# =============================================================================

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PHONE=+1234567890
ADMIN_NOTIFICATIONS=true

# System Configuration
SYSTEM_MAINTENANCE=false
SYSTEM_VERSION=3.0.0
SYSTEM_TIMEZONE=UTC