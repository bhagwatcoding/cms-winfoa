/**
 * Staging Environment Configuration
 * Pre-production testing environment variables
 * 
 * @module StagingEnv
 * @description Staging environment configuration for testing
 * 
 * IMPORTANT: This file contains staging-specific configurations.
 * Use environment variables in your staging deployment platform.
 */

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

NODE_ENV=staging
NEXT_PUBLIC_APP_URL=https://staging.winfoa.com
NEXT_PUBLIC_API_URL=https://staging-api.winfoa.com

APP_NAME=Winfoa Multi-Subdomain Platform (Staging)
APP_VERSION=3.0.0-staging

# =============================================================================
# SUBDOMAIN CONFIGURATION
# =============================================================================

MAIN_DOMAIN=staging.winfoa.com

AUTH_SUBDOMAIN=staging-auth.winfoa.com
DASHBOARD_SUBDOMAIN=staging-app.winfoa.com
GOD_SUBDOMAIN=staging-god.winfoa.com
MYACCOUNT_SUBDOMAIN=staging-account.winfoa.com
UMP_SUBDOMAIN=staging-ump.winfoa.com
WALLET_SUBDOMAIN=staging-wallet.winfoa.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Atlas (Staging)
MONGODB_URI=mongodb+srv://winfoa-staging:<password>@staging-cluster.mongodb.net/winfoa-staging?retryWrites=true&w=majority
MONGODB_DB_NAME=winfoa-staging

# Redis Cloud (Staging)
REDIS_URL=redis://default:<password>@redis-staging-12345.c123.us-east-1-2.ec2.cloud.redislabs.com:12345
REDIS_DB=1

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration (Staging - Use different secrets than production)
JWT_SECRET=<generate-256-bit-staging-secret>
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=<generate-256-bit-staging-refresh-secret>
JWT_REFRESH_EXPIRES_IN=30d

# NextAuth Configuration
NEXTAUTH_URL=https://staging.winfoa.com
NEXTAUTH_SECRET=<generate-256-bit-staging-nextauth-secret>

# Session Configuration
SESSION_SECRET=<generate-256-bit-staging-session-secret>
SESSION_MAX_AGE=2592000
SESSION_COOKIE_NAME=winfoa-session-staging

# Security Configuration (Relaxed for testing)
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=200  # Higher limit for testing
CORS_ORIGIN=https://staging.winfoa.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Configuration (Mailtrap for staging)
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_SECURE=false
EMAIL_USER=<mailtrap-username>
EMAIL_PASSWORD=<mailtrap-password>
EMAIL_FROM=noreply@staging.winfoa.com

# SMS Configuration (Twilio Test Credentials)
SMS_PROVIDER=twilio
SMS_TWILIO_ACCOUNT_SID=<twilio-test-account-sid>
SMS_TWILIO_AUTH_TOKEN=<twilio-test-auth-token>
SMS_TWILIO_PHONE_NUMBER=+1234567890

# File Storage Configuration (AWS S3 Staging)
STORAGE_PROVIDER=aws
AWS_ACCESS_KEY_ID=<aws-staging-access-key>
AWS_SECRET_ACCESS_KEY=<aws-staging-secret-key>
AWS_REGION=us-east-1
AWS_S3_BUCKET=winfoa-staging-assets

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry Configuration (Staging Environment)
SENTRY_DSN=<sentry-staging-dsn>
SENTRY_ENVIRONMENT=staging
SENTRY_RELEASE=3.0.0-staging

# Google Analytics (Staging)
GA_TRACKING_ID=G-STAGINGXXXXX
GA_MEASUREMENT_ID=G-STAGINGXXXXX

# Mixpanel (Staging)
MIXPANEL_TOKEN=<mixpanel-staging-token>

# =============================================================================
# PAYMENT & FINANCIAL (TEST MODE)
# =============================================================================

# Stripe Configuration (Test Mode)
STRIPE_PUBLISHABLE_KEY=pk_test_<stripe-test-publishable-key>
STRIPE_SECRET_KEY=sk_test_<stripe-test-secret-key>
STRIPE_WEBHOOK_SECRET=whsec_<stripe-test-webhook-secret>

# PayPal Configuration (Sandbox)
PAYPAL_CLIENT_ID=<paypal-sandbox-client-id>
PAYPAL_CLIENT_SECRET=<paypal-sandbox-client-secret>
PAYPAL_ENVIRONMENT=sandbox

# =============================================================================
# SOCIAL AUTHENTICATION (TEST APPS)
# =============================================================================

# Google OAuth (Staging App)
GOOGLE_CLIENT_ID=<google-staging-client-id>
GOOGLE_CLIENT_SECRET=<google-staging-client-secret>

# GitHub OAuth (Staging App)
GITHUB_CLIENT_ID=<github-staging-client-id>
GITHUB_CLIENT_SECRET=<github-staging-client-secret>

# Facebook OAuth (Staging App)
FACEBOOK_CLIENT_ID=<facebook-staging-client-id>
FACEBOOK_CLIENT_SECRET=<facebook-staging-client-secret>

# =============================================================================
# STAGING SETTINGS
# =============================================================================

# Staging Settings
DEBUG=true
LOG_LEVEL=debug
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true
GENERATE_SOURCEMAPS=true

# Feature Flags (All enabled for testing)
FEATURE_NEW_DASHBOARD=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true
FEATURE_PAYMENTS=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_TWO_FACTOR_AUTH=true
FEATURE_WEBHOOKS=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Cache Configuration (Shorter TTL for testing)
CACHE_TTL=1800  # 30 minutes
CACHE_MAX_SIZE=500

# CDN Configuration (Disabled for staging)
CDN_ENABLED=false
CDN_URL=https://staging-cdn.winfoa.com
CDN_ASSETS_URL=https://staging-assets.winfoa.com

# Image Optimization
IMAGE_OPTIMIZATION=true
IMAGE_QUALITY=80  # Lower quality for faster loading
IMAGE_FORMATS=webp,avif

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================

# Webhook Settings
WEBHOOK_SECRET=<generate-staging-webhook-secret>
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=2  # Fewer retries for testing
WEBHOOK_RETRY_DELAY=3000  # Shorter delay

# =============================================================================
# ADMINISTRATION
# =============================================================================

# Admin Configuration
ADMIN_EMAIL=staging-admin@winfoa.com
ADMIN_PHONE=+1234567890
ADMIN_NOTIFICATIONS=true

# System Configuration
SYSTEM_MAINTENANCE=false
SYSTEM_VERSION=3.0.0-staging
SYSTEM_TIMEZONE=UTC

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test User Credentials (For automated testing)
TEST_USER_EMAIL=test@staging.winfoa.com
TEST_USER_PASSWORD=test123456
TEST_ADMIN_EMAIL=admin@staging.winfoa.com
TEST_ADMIN_PASSWORD=admin123456

# API Testing Configuration
API_TEST_BASE_URL=https://staging-api.winfoa.com
API_TEST_TIMEOUT=30000
API_TEST_RETRIES=3