# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/winfoa
MONGODB_DB_NAME=winfoa

# For MongoDB Atlas (cloud), use this format instead:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/winfoa?retryWrites=true&w=majority

# Next.js
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_ROOT_DOMAIN=localhost:3000

# Session Security (REQUIRED - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
