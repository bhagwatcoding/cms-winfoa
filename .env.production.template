# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://winfoa.com
NEXT_PUBLIC_API_URL=https://api.winfoa.com

APP_NAME=Winfoa Multi-Subdomain Platform
APP_VERSION=3.0.0

# =============================================================================
# SUBDOMAIN CONFIGURATION
# =============================================================================

MAIN_DOMAIN=winfoa.com

AUTH_SUBDOMAIN=auth.winfoa.com
DASHBOARD_SUBDOMAIN=app.winfoa.com
GOD_SUBDOMAIN=god.winfoa.com
MYACCOUNT_SUBDOMAIN=account.winfoa.com
UMP_SUBDOMAIN=ump.winfoa.com
WALLET_SUBDOMAIN=wallet.winfoa.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Atlas (Production)
MONGODB_URI=mongodb+srv://winfoa-prod:<password>@cluster0.mongodb.net/winfoa?retryWrites=true&w=majority
MONGODB_DB_NAME=winfoa-prod

# Redis Cloud (Production)
REDIS_URL=redis://default:<password>@redis-12345.c123.us-east-1-2.ec2.cloud.redislabs.com:12345
REDIS_DB=0

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration (Use strong, unique secrets)
JWT_SECRET=<generate-256-bit-secret>
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=<generate-256-bit-refresh-secret>
JWT_REFRESH_EXPIRES_IN=30d

# NextAuth Configuration
NEXTAUTH_URL=https://winfoa.com
NEXTAUTH_SECRET=<generate-256-bit-nextauth-secret>

# Session Configuration
SESSION_SECRET=<generate-256-bit-session-secret>
SESSION_MAX_AGE=2592000
SESSION_COOKIE_NAME=winfoa-session-prod

# Security Configuration
BCRYPT_ROUNDS=14
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
CORS_ORIGIN=https://winfoa.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Configuration (SendGrid)
EMAIL_PROVIDER=sendgrid
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=apikey
EMAIL_PASSWORD=<sendgrid-api-key>
EMAIL_FROM=noreply@winfoa.com

# SMS Configuration (Twilio)
SMS_PROVIDER=twilio
SMS_TWILIO_ACCOUNT_SID=<twilio-account-sid>
SMS_TWILIO_AUTH_TOKEN=<twilio-auth-token>
SMS_TWILIO_PHONE_NUMBER=+1234567890

# File Storage Configuration (AWS S3)
STORAGE_PROVIDER=aws
AWS_ACCESS_KEY_ID=<aws-access-key>
AWS_SECRET_ACCESS_KEY=<aws-secret-key>
AWS_REGION=us-east-1
AWS_S3_BUCKET=winfoa-prod-assets

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry Configuration
SENTRY_DSN=<sentry-dsn>
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=3.0.0

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel
MIXPANEL_TOKEN=<mixpanel-token>

# =============================================================================
# PAYMENT & FINANCIAL
# =============================================================================

# Stripe Configuration (Production)
STRIPE_PUBLISHABLE_KEY=pk_live_<stripe-publishable-key>
STRIPE_SECRET_KEY=sk_live_<stripe-secret-key>
STRIPE_WEBHOOK_SECRET=whsec_<stripe-webhook-secret>

# PayPal Configuration (Production)
PAYPAL_CLIENT_ID=<paypal-client-id>
PAYPAL_CLIENT_SECRET=<paypal-client-secret>
PAYPAL_ENVIRONMENT=live

# =============================================================================
# SOCIAL AUTHENTICATION
# =============================================================================

# Google OAuth (Production)
GOOGLE_CLIENT_ID=<google-client-id>
GOOGLE_CLIENT_SECRET=<google-client-secret>

# GitHub OAuth (Production)
GITHUB_CLIENT_ID=<github-client-id>
GITHUB_CLIENT_SECRET=<github-client-secret>

# Facebook OAuth (Production)
FACEBOOK_CLIENT_ID=<facebook-client-id>
FACEBOOK_CLIENT_SECRET=<facebook-client-secret>

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production Settings
DEBUG=false
LOG_LEVEL=info
ENABLE_SWAGGER=false
ENABLE_GRAPHIQL=false
GENERATE_SOURCEMAPS=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Production Feature Flags
FEATURE_NEW_DASHBOARD=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true
FEATURE_PAYMENTS=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_TWO_FACTOR_AUTH=true
FEATURE_WEBHOOKS=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# CDN Configuration
CDN_ENABLED=true
CDN_URL=https://cdn.winfoa.com
CDN_ASSETS_URL=https://assets.winfoa.com

# Image Optimization
IMAGE_OPTIMIZATION=true
IMAGE_QUALITY=85
IMAGE_FORMATS=webp,avif

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================

# Webhook Settings
WEBHOOK_SECRET=<generate-webhook-secret>
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=5000

# =============================================================================
# ADMINISTRATION
# =============================================================================

# Admin Configuration
ADMIN_EMAIL=admin@winfoa.com
ADMIN_PHONE=+1234567890
ADMIN_NOTIFICATIONS=true

# System Configuration
SYSTEM_MAINTENANCE=false
SYSTEM_VERSION=3.0.0
SYSTEM_TIMEZONE=UTC