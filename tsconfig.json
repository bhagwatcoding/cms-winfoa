{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      // ==========================================
      // ROOT PATHS
      // ==========================================
      "@/*": [
        "./src/*"
      ],
      // ==========================================
      // FEATURE PATHS (Multi-Subdomain Features)
      // ==========================================
      "@/features/*": [
        "./src/features/*"
      ],
      "@/auth/*": [
        "./src/features/auth/*"
      ],
      "@/account/*": [
        "./src/features/account/*"
      ],
      "@/api-mgmt/*": [
        "./src/features/api-management/*"
      ],
      "@/admin/*": [
        "./src/features/admin/*"
      ],
      "@/skills/*": [
        "./src/features/skills/*"
      ],
      "@/ump/*": [
        "./src/features/ump/*"
      ],
      "@/myaccount/*": [
        "./src/features/myaccount/*"
      ],
      "@/developer/*": [
        "./src/features/developer/*"
      ],
      // ==========================================
      // SHARED PATHS (Common Across Subdomains)
      // ==========================================
      "@/shared/*": [
        "./src/shared/*"
      ],
      // ==========================================
      // COMPONENT PATHS
      // ==========================================
      "@/components/*": [
        "./src/shared/components/*"
      ],
      "@/ui": [
        "./src/shared/components/ui"
      ],
      "@/ui/*": [
        "./src/shared/components/ui/*"
      ],
      // ==========================================
      // LIBRARY PATHS (Core Utilities)
      // ==========================================
      "@/lib/*": [
        "./src/shared/lib/*"
      ],
      "@/lib/db": [
        "./src/shared/lib/db"
      ],
      "@/lib/session": [
        "./src/shared/lib/session"
      ],
      "@/lib/permissions": [
        "./src/shared/lib/permissions"
      ],
      "@/lib/constants": [
        "./src/shared/lib/constants"
      ],
      "@/lib/validations": [
        "./src/shared/lib/validations"
      ],
      "@/lib/crypto": [
        "./src/shared/lib/crypto"
      ],
      "@/lib/helpers": [
        "./src/shared/lib/helpers"
      ],
      "@/lib/utils": [
        "./src/shared/lib/utils"
      ],
      "@/lib/types": [
        "./src/shared/lib/types"
      ],
      // ==========================================
      // ALIASES (Shortcuts)
      // ==========================================
      "@/helpers": [
        "./src/shared/lib/helpers"
      ],
      "@/utils": [
        "./src/shared/lib/utils"
      ],
      // ==========================================
      // DATABASE PATHS
      // ==========================================
      "@/models": [
        "./src/shared/lib/db/models"
      ],
      "@/models/*": [
        "./src/shared/lib/db/models/*"
      ],
      // ==========================================
      // ACTIONS PATHS (Server Actions)
      // ==========================================
      "@/actions": [
        "./src/shared/actions"
      ],
      "@/actions/*": [
        "./src/shared/actions/*"
      ],
      // ==========================================
      // SERVICES PATHS (Server Services)
      // ==========================================
      "@/services": [
        "./src/shared/services"
      ],
      "@/services/*": [
        "./src/shared/services/*"
      ],
      // ==========================================
      // HOOKS PATHS
      // ==========================================
      "@/hooks": [
        "./src/shared/hooks"
      ],
      "@/hooks/*": [
        "./src/shared/hooks/*"
      ],
      // ==========================================
      // TYPES PATHS
      // ==========================================
      "@/types": [
        "./src/shared/types"
      ],
      "@/types/*": [
        "./src/shared/types/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "build",
    "dist"
  ]
}